{
  "compilerOptions": {
    "declaration": true,
    "stripInternal": false,
    "experimentalDecorators": true,
    "noUnusedParameters": false,
    "strictNullChecks": true,
    "importHelpers": true,
    "newLine": "lf",
    "module": "es2015",
    "moduleResolution": "node",
    "outDir": "../../dist/packages/pcac",
    "rootDir": ".",
    "rootDirs": [
      ".",
      "../../dist/packages/pcac"
    ],
    "sourceMap": true,
    "inlineSources": true,
    "target": "es2015",
    "lib": ["es2015", "dom"],
    "skipLibCheck": true,
    "types": [],
    "baseUrl": ".",
    "paths": {
      "@pioneer-code/pioneer-code-angular-charts*": [
        "./src/*"
      ]
    }
  },
  "files": [
    "src/public-api.ts"
  ],
  "angularCompilerOptions": {
    "annotateForClosureCompiler": true,
    "strictMetadataEmit": false, // Workaround for Angular #22210
    "flatModuleOutFile": "index.js",
    "flatModuleId": "@pioneer-code/pioneer-code-angular-charts",
    "skipTemplateCodegen": true,
    "fullTemplateTypeCheck": true
  }
}